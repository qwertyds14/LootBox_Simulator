<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="LootBox.AddLootBoxWindow"
        Title="AddLootBoxWindow">

	<Grid RowDefinitions="40,*,*,*, 40" ColumnDefinitions="0,*,*" ShowGridLines="False" Background="White">
		<StackPanel Grid.Row="" Grid.Column="1" Background="Gainsboro"></StackPanel>
		<StackPanel Grid.Row="" Grid.Column="2" Background="Gainsboro"></StackPanel>
		<StackPanel Grid.Row="" Grid.Column="3" Background="Gainsboro"></StackPanel>

		<TextBlock Grid.Column="1" Grid.Row="0" Grid.RowSpan="1" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold">
			Создание лутбокса
		</TextBlock>

		<TextBlock Grid.Column="1" Grid.Row="1"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"
           FontWeight="Bold"
           Margin="10,0,0,0">
			Название:
		</TextBlock>
		<TextBox Name="LootBoxNameTextBox"
		Grid.Column="2"
		Grid.Row="1"
		HorizontalAlignment="Stretch"
		VerticalAlignment="Center"
		Margin="0,0,10,0"
		Width="250"
		Height="30"
		FontSize="15"
		Background="White"
		BorderBrush="Gray"
		TextAlignment="Center"
		Padding="5"/>

		<TextBlock Grid.Column="1" Grid.Row="2"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"
           FontWeight="Bold"
           Margin="10,0,0,0">
			Количество предметов:
		</TextBlock>
		<TextBox Name="AmountTextBox"
         Grid.Column="2"
         Grid.Row="2"
         HorizontalAlignment="Stretch"
         VerticalAlignment="Center"
         Margin="0,0,10,0"
         Width="250"
         Height="30"
         FontSize="15"
         Background="White"
         BorderBrush="Gray"
         TextAlignment="Center"
         Padding="5"/>

		<TextBlock Grid.Column="1" Grid.Row="3"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"
           FontWeight="Bold"
           Margin="10,0,0,0">
			Описание:
		</TextBlock>
		<TextBox Name="DescriptionNameTextBox"
		Grid.Column="2"
		Grid.Row="3"
		HorizontalAlignment="Stretch"
		VerticalAlignment="Center"
		Margin="0,0,10,0"
		Width="250"
		Height="30"
		FontSize="15"
		Background="White"
		BorderBrush="Gray"
		TextAlignment="Center"
		Padding="5"/>

		<Button Name="Back_Button"
			Grid.Row="4"
			Grid.Column="2"
				
		Content ="Отмена"
		Width="100"
		Height="30"
		FontSize="15"
		HorizontalAlignment="Center"
		VerticalAlignment="Center"
		HorizontalContentAlignment="Center"
		VerticalContentAlignment="Center"
		Background="Gray"
		Foreground="Black"
		FontWeight="Bold"
		Click="Back_Button_Click"/>

		<Button Name="Save_Button"
			Grid.Row="4"
			Grid.Column="1"
				
		Content ="Сохранить"
		Width="100"
		Height="30"
		FontSize="15"
		HorizontalAlignment="Center"
		VerticalAlignment="Center"
		HorizontalContentAlignment="Center"
		VerticalContentAlignment="Center"
		Background="Gray"
		Foreground="Black"
		FontWeight="Bold"
		Click="Save_Button_Click"/>
	</Grid>	
</Window>
