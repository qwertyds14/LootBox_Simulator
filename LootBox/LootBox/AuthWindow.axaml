<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="LootBox.AuthWindow"
        Title="LootBox Simulator">

	<Grid RowDefinitions="*,*,*" ColumnDefinitions="*,*" ShowGridLines="False" Background="White">
		<Button Name="Open_LootBox_Button"
		Grid.Row="1"
		Grid.Column="0"
		Content ="Открытие боксов"
		Width="220"
		Height="50"
		FontSize="15"
		HorizontalAlignment="Center"
		VerticalAlignment="Center"
		HorizontalContentAlignment="Center"
		VerticalContentAlignment="Center"
		Background="Gray"
		Foreground="Black"
		FontWeight="Bold"
		Click="Open_Button_Click"/>
		
		<Button Name="Admin_LootBox_Button"
		Grid.Row="1"
		Grid.Column="1"
		Content ="Администрирование"
		Width="220"
		Height="50"
		FontSize="15"
		HorizontalAlignment="Center"
		VerticalAlignment="Center"
		HorizontalContentAlignment="Center"
		VerticalContentAlignment="Center"
		Background="Gray"
		Foreground="Black"
		FontWeight="Bold"
		Click="Admin_Button_Click"/>

		<TextBlock Grid.RowSpan="2" 
				   Grid.ColumnSpan="2" 
				   HorizontalAlignment="Center" 
				   VerticalAlignment="Center" 
				   FontWeight="Bold" 
				   FontSize="30">
			Главное меню
		</TextBlock>
		
	</Grid>
</Window>
